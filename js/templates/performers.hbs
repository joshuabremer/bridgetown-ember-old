<h2>Performers</h2>

{{#linkTo "new_performer"}}New Performer{{/linkTo}}

<table>
  <thead>
    <th>name</th>
    <th>headshot</th>
    <th>bio</th>
  </thead>
  <tbody>
    {{#each performer in controller}}
    <tr>
      <td>{{ performer.title }}</td>
      <td><img {{bindAttr src="performer.assetUrl" }} /></td>
      <td>{{ performer.bio }}</td>
      <td>{{#linkTo "performer" performer }}view{{/linkTo}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>


