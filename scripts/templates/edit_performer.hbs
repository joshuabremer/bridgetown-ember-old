<h2>Performer</h2>

<form {{action save on="submit"}}>
  
  <p>
    <label for="name">Name</label><br>
    {{view Ember.TextField valueBinding="name" id="name"}}
  </p>
  
  <p>
    <label for="headshot">Headshot</label><br>
    {{view Ember.TextField valueBinding="headshot" id="headshot"}}
  </p>
  
  <p>
    <label for="bio">Bio</label><br>
    {{view Ember.TextField valueBinding="bio" id="bio"}}
  </p>
  
  <p>
    <button type="submit">Save</button>
  </p>

</form>

