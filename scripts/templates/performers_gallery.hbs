<div class="row">
  {{#each performer in controller}}
  <div class="col-sm-6 col-sm-4 col-md-3 col-lg-2">
    <div class="performer-thumbnail">
      <img class="lazy img-responsive" width="300" height="300" {{bind-attr data-original="performer.headshot" }} />
    </div>
    <legend>{{#link-to "performer" performer }}{{ performer.name }}{{/link-to}}</legend>
  </div>
  {{/each}}
</div>

