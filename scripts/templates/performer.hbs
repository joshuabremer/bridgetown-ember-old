
  <div class="jumbotron jumbotron-tiny jumbotron-color-2 jumbotron-page-header">
    <div class="container">
      <div class="row centered">
        <div class="col-lg-8 col-lg-offset-2">
        <h2>{{{ Name }}}</h2>
        </div>
      </div><!-- row -->
    </div><!-- container -->
  </div><!-- headerwrap -->

<div class="container single-performer main-content">
  <div class="row">

    <div class="col-sm-4 text-center">
      <p><img class="img-responsive performer-headshot" {{bind-attr src="headshot300" }} /></p>
    </div>
    <div class="col-sm-8">
      <p>
        {{{ Bio }}}
      </p>
      
      <ul class="list-group">
        <li class="list-group-item active" style="background:#695b53;">
        <h4 class="list-group-item-heading" style="background:#695b53;color:white">Shows</h4>
        </li>
        {{#each event in sortedEvents}}
          {{#link-to "event" event classNames="list-group-item"}}
            <strong>{{{event.Name}}}</strong> - {{event.venue.Name}}
              <br /> ({{niceDate event.start_time}} {{getTime event.start_time}} - {{getTime event.end_time}})
          {{/link-to}}
        {{else}}
          <li class="list-group-item">No shows scheduled yet...</li>
        {{/each}}

      </ul>
      {{#if isAnMC}}
      <ul class="list-group">
        <li class="list-group-item active" style="background:#695b53;">
        <h4 class="list-group-item-heading" style="background:#695b53;color:white">Show MC</h4>
        </li>
        {{#each event in mc_events}}
          {{#link-to "event" event.id classNames="list-group-item"}}
            <strong>{{{event.Name}}}</strong> - {{event.venue.Name}}
              <br /> ({{niceDate event.start_time}} {{getTime event.start_time}} - {{getTime event.end_time}})
          {{/link-to}}
        {{else}}
          <li class="list-group-item">No shows scheduled yet...</li>
        {{/each}}

      </ul>
      {{/if}}
      <p>
        {{#link-to "performers"}}‚Üê All Performers{{/link-to}}
      </p>
    </div>
  </div>
</div>





