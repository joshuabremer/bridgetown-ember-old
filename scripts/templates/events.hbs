<h2>Events</h2>

{{#linkTo "new_events"}}New Event{{/linkTo}}

<table>
  <thead>
    <th>name</th>
    <th>start_time</th>
    <th>end_time</th>
    <th>price</th>
  </thead>
  <tbody>
    {{#each event in controller}}
    <tr>
      <td>{{ event.name }}</td>
      <td>{{ event.start_time }}</td>
      <td>{{ event.end_time }}</td>
      <td>{{ event.price }}</td>
      <td>{{#linkTo "event" event }}view{{/linkTo}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>


