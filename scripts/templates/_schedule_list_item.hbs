  <li {{bind-attr data-start-time="event.start_time"}} {{bind-attr class=":schedule-list__item :list-group-item event.weekday"}}>
    <div class="container-fluid">
      <div class="row">
       <div class="col-sm-4">
          <p class="lead">{{{event.Name}}}
            <br/>
          <small>(<span style="white-space:nowrap">{{getTime event.start_time}} - </span>
          <span style="white-space:nowrap">{{getTime event.end_time}}</span>)</small>
          </p>
        </div>
        <div class="col-xs-5 col-sm-4">
          <p><span class="schedule-list__item-venue-label label label-default">{{event.venue.Name}}</span></p>
        </div>
        <div class="col-xs-7 col-sm-4">
          <ul class="schedule-list__performer-list">
            
          {{#each performer in event.performers}}

              <li>
                {{#link-to "performer" performer }}
                <span class="label label-default schedule__label-performer">
                  {{{performer.Name}}}
                </span>
                {{/link-to}}
              </li>

          {{/each}}  
          {{#each emcee in event.emcees}}
              <li><strong>MC: </strong>
                {{#link-to "performer" emcee }}
                <span class="label label-default schedule__label-performer">
                  {{{emcee.Name}}}
                </span>
                {{/link-to}}
              </li>
           {{/each}} 
          </ul>
          &nbsp;
        </div>
      </div>
    </div>
    </li>

